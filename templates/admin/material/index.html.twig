{% extends 'base.html.twig' %}

{% block title %}Material index{% endblock %}

{% block body %}

    <h1>Material index</h1>
    <a class="btn btn-primary" href="{{ path('app_admin_material_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            <tr>
                <td>{{ material.id }}</td>
                <td>{{ material.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_admin_material_show', {'id': material.id}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('app_admin_material_edit', {'id': material.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
